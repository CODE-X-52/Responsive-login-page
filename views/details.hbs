<style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }

        /* Style for the logout button */
  a.logout-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #3aaa1b;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }

  a.logout-button:hover {
    background-color: #0f4e16;
  }
    </style>

<h2>Student Information</h2>
<a href="/logout" class="logout-button">Logout</a>

    <table action="/details">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Profile Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>
                    {{#if this.profile_image}}
                        <a href="/download/{{this.id}}">Download</a>
                    {{else}}
                        No image
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>